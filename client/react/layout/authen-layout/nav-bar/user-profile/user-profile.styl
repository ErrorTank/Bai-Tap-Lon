.user-nav-profile{
  position relative
  .profile-toggle{
    cursor pointer

    &:hover{
      .k-logo{
        border-color primary
      }

    }
  }
  .profile-detail{
    position absolute
    width 300px
    border-radius 4px
    box-shadow 0px 0px 15px 1px rgba(69,65,78,0.2)
    top 110%
    right 0
    overflow hidden
    background-color #fff
    .detail-body{
      padding 20px
    }
    .detail-header{
      padding 20px
      display flex
      background-color primary
      align-items center
      .part-right{
        margin-left 15px
        & > div{
          color white
          .name{
            font-size 15px
            font-weight 500
          }
        }
      }
      .k-logo{
        width 65px
        height 65px
        img{
          width 65px
          height 65px
        }
      }
    }
  }
}
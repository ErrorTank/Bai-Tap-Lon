.login-route{
  width 100vw
  height 100vh
  background-image: url("./assets/img/grey.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  .login-panel-wrap{
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    .login-panel{
      padding 50px
      border-radius 5px
      background-color white
      width 400px
      box-shadow 8.49945px 8.49945px 4.24972px rgba(0,0,0,.25)
      .panel-header{
        text-align center
        padding-bottom 30px
      }
      .panel-body{
        .login-input{
          label
          .form-control-feedback
          {
            font-size sm - 0.2rem
            font-weight 500
          }
          input{
            font-size sm - 0.2rem

          }
        }
      }
      .panel-footer{
        margin-top 30px
        .forgot-password{

        }
        button{
          font-size 15px
          width 100%
        }
      }
    }
  }
}

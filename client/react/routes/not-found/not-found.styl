.not-found-page{
  color red
  text-align center
  margin-block-start 10%
  position relative
  .logo-404-image{
    height 400px
    width 100%
    margin auto
    position relative
  }
  .not-found-title{
    font-size: 50px
    font-weight: 700
  }
  .explain{
    p{
      margin-bottom: 20px
    }
  }
}

.redirect{
  margin-top: 50px
  span{
      color:#03fc73 ;
      border-radius: 6px
      background: transparent;
      border: 2px solid #03fc73;
      padding: 16px 16px;
      text-align: center;
      display: inline-block;
      font-size: 15px;
      margin: 4px 2px;
      transition-duration: 0.2s;
      cursor: pointer;
      text-decoration: none;
      text-transform: uppercase;
      width: 190px
      &:hover{
        background-color: #00c663;
        color: white;
      }
  }

}